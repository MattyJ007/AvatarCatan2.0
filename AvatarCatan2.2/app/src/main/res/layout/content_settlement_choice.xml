<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="catan.avatar.matt.avatarcatan22.SettlementChoiceActivity"
    tools:showIn="@layout/activity_settlement_choice">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Defense bonus for settlement:"
            android:id="@+id/textView7"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_weight="0.1"
            android:textColor="#177b71"
            android:textSize="30dp"
            android:background="#ffffff" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="None"
                android:id="@+id/set1"
                android:layout_weight="0.2"
                android:textStyle="bold"
                android:textSize="40dp"
                android:outlineProvider="bounds"
                android:background="#ffffff" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="#24beaf"
            android:layout_margin="10dp"
            android:padding="5dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Village"
                android:id="@+id/set2"
                android:layout_weight="0.2"
                android:textStyle="bold"
                android:textSize="40dp"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="5dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_margin="10dp"
            android:background="#24beaf"
            android:padding="15dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Town"
                android:id="@+id/set3"
                android:layout_weight="0.2"
                android:background="#ffffff"
                android:textSize="40dp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="#24beaf"
            android:layout_margin="10dp"
            android:padding="45dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="City"
                android:id="@+id/set4"
                android:layout_weight="0.2"
                android:background="#ffffff"
                android:textStyle="bold"
                android:textSize="40dp" />
        </FrameLayout>

    </LinearLayout>
</RelativeLayout>
