<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="catan.avatar.matt.avatarcatan22.SettlementChoiceActivity"
    tools:showIn="@layout/activity_settlement_choice"
    android:background="#000000">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Settlement type in which battle takes place:"
            android:id="@+id/textView7"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_weight="0.1"
            android:textColor="#ff6bfa"
            android:textSize="30dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="None"
            android:id="@+id/set1"
            android:layout_weight="0.2"
            android:background="#e504ed"
            android:textStyle="bold"
            android:textSize="40dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Village"
            android:id="@+id/set2"
            android:layout_weight="0.2"
            android:background="#bd01b4"
            android:textStyle="bold"
            android:textSize="40dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Town"
            android:id="@+id/set3"
            android:layout_weight="0.2"
            android:background="#8f0292"
            android:textSize="40dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City"
            android:id="@+id/set4"
            android:layout_weight="0.2"
            android:background="#6e007d"
            android:textStyle="bold"
            android:textSize="40dp" />
    </LinearLayout>
</RelativeLayout>
