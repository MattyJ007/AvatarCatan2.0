<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ActivityBattleGround"
    tools:showIn="@layout/activity_battle_ground"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_weight="1"
        android:background="#24beaf">

        <Button
            android:text="Continue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button15"
            android:layout_weight="3"
            android:rotation="180"
            android:background="@android:color/holo_blue_light"
            android:visibility="invisible" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:rotation="180">

            <TextView
                android:text="Attacking Army:\n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/attArmyMain"
                android:layout_weight="1"
                android:background="#24beaf"
                android:textSize="20sp"
                android:textColor="#000"
                android:gravity="left|center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="25">

        <GridView
            android:layout_weight="1"
            android:rotation="180"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gridView"
            android:clickable="true"
            android:numColumns="5"
            android:stretchMode="columnWidth"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:background="#000">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/defViewInfo"
                android:layout_weight="1"
                android:gravity="left|center"
                android:background="#fd6767"
                android:textSize="17sp"
                android:paddingLeft="5dp" />

            <TextView
                android:text="Your Turn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/centerText"
                android:layout_weight="1.7"
                android:gravity="center"
                android:background="#fd6767"
                android:layout_margin="3dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/attViewInfo"
                android:layout_weight="1"
                android:gravity="left|center"
                android:background="#fd6767"
                android:textSize="17sp"
                android:rotation="180"
                android:paddingLeft="5dp" />
        </LinearLayout>

        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/gridView2"
            android:clickable="true"
            android:numColumns="5"
            android:stretchMode="columnWidth"
            android:background="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_weight="1"
        android:background="#000">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="Defending Army\n"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/defArmyMain"
                android:layout_weight="1"
                android:gravity="left|center"
                android:textColor="#24beaf"
                android:textSize="20sp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />
        </ScrollView>

        <Button
            android:text="Continue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button14"
            android:layout_weight="3"
            android:background="@android:color/holo_blue_light"
            android:visibility="invisible" />
    </LinearLayout>
</LinearLayout>
