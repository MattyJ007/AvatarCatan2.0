<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="catan.avatar.matt.avatarcatan22.BattleGroundActivity"
    tools:showIn="@layout/activity_battle_ground">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.45">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Defending Army"
                android:id="@+id/textView4"
                android:layout_weight="0.1"
                android:background="#1a8b80"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#000000" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:nestedScrollingEnabled="false"></GridLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_weight="0.05"
            android:background="#24beaf"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_weight="0.05"
            android:background="#000000"
            android:gravity="center" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.45">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"></GridLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assailing Army"
                android:id="@+id/textView5"
                android:layout_weight="0.1"
                android:background="#000000"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#1a8b80" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
