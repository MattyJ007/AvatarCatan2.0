<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ActivityBattleGround"
    tools:showIn="@layout/activity_battle_ground"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#24beaf">

        <Button
            android:text="Yes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button15"
            android:layout_weight="1.9"
            android:rotation="180"
            android:background="@android:color/holo_blue_light"
            android:visibility="invisible" />

        <TextView
            android:text="Attacking Army"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#24beaf"
            android:textSize="20sp"
            android:textColor="#000"
            android:rotation="180" />

        <Button
            android:text="No"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button13"
            android:layout_weight="1.9"
            android:rotation="180"
            android:visibility="invisible"
            android:background="#fd6767" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="25">

        <GridView
            android:layout_weight="1"
            android:rotation="180"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gridView"
            android:clickable="true"
            android:numColumns="5"
            android:stretchMode="columnWidth"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView15"
            android:layout_weight="1.8"
            android:gravity="center"
            android:background="#fd6767"
            android:text="^^^ Turn Victory"
            android:textSize="25sp" />

        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/gridView2"
            android:clickable="true"
            android:numColumns="5"
            android:stretchMode="columnWidth"
            android:background="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#000">

        <Button
            android:text="No"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button16"
            android:layout_weight="1.9"
            android:elevation="0dp"
            android:background="#fd6767"
            android:visibility="invisible" />

        <TextView
            android:text="Defending Army"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView4"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#24beaf"
            android:textSize="20sp" />

        <Button
            android:text="Yes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button14"
            android:layout_weight="1.9"
            android:background="@android:color/holo_blue_light"
            android:visibility="invisible" />
    </LinearLayout>
</LinearLayout>
