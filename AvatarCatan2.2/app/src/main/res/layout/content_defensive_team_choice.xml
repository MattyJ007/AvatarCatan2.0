<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="catan.avatar.matt.avatarcatan22.DefensiveTeamChoiceActivity"
    tools:showIn="@layout/activity_defensive_team_choice"
    android:background="#000000"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Choose Defending Heroes:"
                android:id="@+id/textView2"
                android:layout_weight="0.5"
                android:gravity="left|center"
                android:textColor="#83fc81"
                android:textStyle="bold"
                android:textSize="25dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Defending Team:"
                android:id="@+id/textView3"
                android:layout_weight="0.5"
                android:gravity="left|center"
                android:layout_gravity="bottom"
                android:textColor="#83fc81"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.75">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/listView"
                android:layout_gravity="bottom|center_vertical|right"
                android:layout_weight="0.5"/>

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listView2"
                android:layout_weight="0.5" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="right"
            android:layout_gravity="right">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Continue"
                android:id="@+id/continueButt2"
                android:layout_weight="0.1"
                android:gravity="center"
                android:background="#199624" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
